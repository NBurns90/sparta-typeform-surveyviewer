<%= render 'partials/nav' %>

<div class="container">
<h1 class="text-center">Survey Responses</h1>
<div class="row">
<div class="filter col-md-6">
  <form>
    <p>Select Trainer: </p>
   <select name="curr_trainer">
   <% @trainers.each do |trainer| %>
    <option value="<%= trainer %>"><%= trainer %>
   <%end%>
   </select>
  </form>

  <div id = "Blah" class="hidden"></div>


</div>

<div class="filter col-md-6">
  <h2>Trainer Score:<%=@NPSScore %></h2>

</div>
</div>


<table class="table-striped text-center">
 <thead>
     <% @questions.each do |map| %>
      <th> <span data-toggle="tooltip" data-placement="right" title="<%= map["question"] %>"><%= map["question"] %></span></th>
   <% end %>
 </thead>
 <tbody>
   <% @mappingHash.each_with_index do |map| %>
     <tr class="active">

       <% if map["Q_TName"] == @trainers[0] %>

       <% if (map["Q_Score"] >= 8) %>
         <td class="good"><%= map["Q_Score"] %></td>
       <% elsif (map["Q_Score"] < 8 && map["Q_Score"] >= 5 ) %>
         <td class="medium"><%= map["Q_Score"] %></td>
       <% else (map["Q_Score"] < 5) %>
         <td class="bad"><%= map["Q_Score"] %></td>
        <% end %>

         <td><%= map["Q_Organised"] %></td>
         <td><%= map["Q_Industry"] %></td>
         <td><%= map["Q_Examples"] %></td>
         <td><%= map["Q_Feedback"] %></td>
         <td><%= map["Q_Contact"] %></td>
         <td><%= map["Q_ClearProjects"] %></td>
         <td><%= map["Q_TName"] %></td>
        <td>
          <span data-toggle="tooltip" data-placement="top" title="<%= map["Q_feedbacktext"] %>"></span><%= map["Q_feedbacktext"] %>
        </td>
         <td><%= map["Q_DrawsAttention"] %></td>
       <% end %>

     </tr>
   <% end %>
 </tbody>
</table>
</div>


<script>
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();
});
</script>
